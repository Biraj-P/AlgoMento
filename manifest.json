{
  "manifest_version": 3,
  "name": "AlgoMento - AI Coding Assistant",
  "version": "1.0.0",
  "description": "AI-powered coding mentor for competitive programming platforms. Get instant help with problem approaches, debugging, and interview preparation. Created by Biraj Paul.",
  "author": "Biraj Paul (Biraj-P)",
  "homepage_url": "https://github.com/Biraj-P/AlgoMento",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://api.cohere.ai/*",
    "https://api.mistral.ai/*",
    "https://api.groq.com/*",
    "https://api.together.xyz/*"
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "AlgoMento - AI Coding Assistant"
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/*",
        "https://www.hackerrank.com/*",
        "https://codeforces.com/*",
        "https://www.geeksforgeeks.org/*",
        "https://geeksforgeeks.org/*",
        "https://www.codechef.com/*",
        "https://codechef.com/*",
        "https://atcoder.jp/*",
        "https://www.spoj.com/*",
        "https://spoj.com/*",
        "https://www.hackerearth.com/*",
        "https://hackerearth.com/*"
      ],
      "js": [
        "src/config.js",
        "src/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}
